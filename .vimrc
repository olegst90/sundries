set incsearch
set hlsearch
set autoindent
set cindent
" show existing tab with 4 spaces width
set tabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" On pressing tab, insert 4 spaces
set expandtab

set listchars=eol:$,tab:>-,trail:~,extends:>,precedes:<

" errorformat=%f:%l:%c: error: %m  

nnoremap <Space> i_<Esc>r

set number
